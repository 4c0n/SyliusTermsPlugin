<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Setono\SyliusTermsPlugin\Model\Terms" table="setono_sylius_terms__terms">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <unique-constraints>
            <unique-constraint columns="code,channel_id,locale_id"/>
        </unique-constraints>

        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>

        <field name="updatedAt" column="updated_at" type="datetime" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-one field="channel" target-entity="Sylius\Component\Channel\Model\ChannelInterface">
            <join-column on-delete="CASCADE" nullable="false" name="channel_id" />
        </many-to-one>

        <many-to-one field="locale" target-entity="Sylius\Component\Locale\Model\LocaleInterface">
            <join-column on-delete="CASCADE" nullable="false" name="locale_id" />
        </many-to-one>

        <field name="code" type="string" column="code" />
        <field name="name" type="string" />
        <field name="content" type="text" />

    </entity>

</doctrine-mapping>
