<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/fixtures.xml" />
        <import resource="services/forms.xml" />
        <import resource="services/forms_extensions.xml" />
        <import resource="services/generators.xml" />
        <import resource="services/menus.xml" />
    </imports>

    <services>

        <service id="setono_sylius_terms.provider.terms" class="Setono\SyliusTermsPlugin\Provider\TermsProvider">
            <argument type="service" id="setono_sylius_terms.repository.terms"/>
            <argument type="service" id="sylius.context.channel.composite"/>
            <argument type="service" id="sylius.context.locale.composite"/>
        </service>

    </services>
</container>
